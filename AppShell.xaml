<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HeroDex.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HeroDex.Views"
    BackgroundColor="#f6f4f3"
    Shell.FlyoutBehavior="Disabled"
    
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="HeroDex">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#f6f4f3" StatusBarStyle="DarkContent" />
    </Shell.Behaviors>

    <ShellContent
        Title="Heroes List"
        ContentTemplate="{DataTemplate views:HeroesListPage}"
        Route="MainPage" />

</Shell>
